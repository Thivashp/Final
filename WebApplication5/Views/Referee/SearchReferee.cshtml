@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WebApplication5.Models.Referee>
@{
    ViewBag.Title = "SearchReferee";
}
<br />
<br />
<br />
<br />
<div class="panel panel-primary" style="border-color:blue">
    <div class="panel-heading" style="background-color:black;border-color:blue"><h1 style="text-align:center;font-family:'Adobe Arabic';color:white;font-size:100px">VIEW ALL REFEREE</h1></div>
    <div class="panel-body" style="background-color:black;border-color:blue">

        <br />
        <div class="form-horizontal">

            @using (Html.BeginForm("SearchReferee", "Referee", FormMethod.Get))
            {

                <table>
                    <tr>
                        <td>
                            <h3>Search by ID</h3>
                        </td>
                        <td>
                            <input type="text" id="refereeId" name="refereeId" class="form-control" />
                        </td>
                        <td>
                            <input style="background-color:blue;color:white" type="submit" value="Search" class="btn btn-default" />
                        </td>
                        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                        <td>
                            <h3>Search by Email</h3>
                        </td>
                        <td>
                            <input  type="text" id="eAdd" name="eAdd" class="form-control" />
                        </td>
                        <td>
                            <input style="background-color:blue;color:white" type="submit" value="Search" class="btn btn-default" />
                        </td>
                    </tr>
                </table>
                <br />
            }



            <table class="table">
                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(model => model.First().refID)</b>
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().emailAdd)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Sdate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().yearsOXP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Experience)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().startDate)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.refID)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.emailAdd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sdate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.yearsOXP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Experience)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.startDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>

                    </tr>
                }

            </table>
            @Html.PagedListPager(Model, page => Url.Action("SearchReferee", new { page, }))
        </div>
        </div>
    </div>
<style>
    body {
        padding: 50px;
        background-image: url('http://safest.link/wp-content/uploads/2015/06/Hd-Wall-Backgrounds-Hd-Cool-HD-Wallpapers.jpg');
    }
    tr{color:white}
</style>







