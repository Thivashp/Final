@model IEnumerable<WebApplication5.Models.CricketPlayers>
@{
    ViewBag.Title = "VerifyS";
}
<h1 style="font-size:medium;color:grey">SELECT SPORT|PERSONAL DETAILS|ADD PLAYERS|<a style="font-size:medium;color:red">CONFIRM DETAILS  </a>|PAYMENT</h1>

<br /><br />
<div class="panel panel-primary">
    <div class="panel-heading" style="background-color:#292929"><h1 style="text-align:center;font-family:Impact"> Player Information</h1></div>
    <div class="panel-body">
        <div style="text-align:center;font-size:large">
            @Html.Label("" + @Session["fn"].ToString()) <br />
            @Html.Label("" + @Session["ln"].ToString())<br />
            @Html.Label(@Session["dob"].ToString())<br />
            @Html.Label(@Session["pn"].ToString())<br />
            @Html.Label(@Session["costPR"].ToString())<br />
            @Html.Label(@Session["add"].ToString())<br />
            @Html.Label(@Session["tn"].ToString())<br />
        </div> 
         <div class="panel-heading" style="background-color:#292929"><h1 style="text-align:center;font-family:Impact;color:white"> League Information</h1></div><br /><br />
        <div style="text-align:center;font-size:large">
            @Html.Label("" + @Session["LeagueTitle"].ToString()) <br />
            @Html.Label("" + @Session["LeagueCategory"].ToString())<br />
            @Html.Label(@Session["LeagueSDte"].ToString())<br />
            @Html.Label(@Session["Regfee"].ToString())<br />
            @Html.Label(@Session["costPR"].ToString())<br />
        </div> 
        
        
            <br />
            <br />
            <div class="panel-heading" style="background-color:#292929"><h1 style="text-align:center;font-family:Impact;color:white"> Team Member Information</h1></div>
            @*@Html.Label("" + Session["TeamMem"].ToString())<br /><br />*@
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.firstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.lastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeamN)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailAdd)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.firstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeamN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAdd)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>

            <p class="button">
                <a class="form-control" href="~/payment.aspx?total=@Session["Amount"].ToString()&div=@Session["Division"].ToString()&teamN=@Session["teamName"]&sportT=@Session["SportType"].ToString()"> Make Payment </a>
            </p>
